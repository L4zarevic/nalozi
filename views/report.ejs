<%- include('includes/head.ejs') %>
    </head>

    <body id="page-top">
        <div id="wrapper">
            <%- include('includes/navigation.ejs') %>
                <div id="content-wrapper" class="d-flex flex-column">
                    <div id="content">
                        <%- include('includes/logout.ejs', {user: user}) %>
                            <div class="container-fluid">
                                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                </div>

                                <div class="report-body__top">
                                    <div class="report_title">
                                        <h1 class="h4 mb-0 text-gray-800">Izvještaj sa službenog putovanja</h1>
                                    </div>

                                    <div class="report_text">
                                        <div class="date-departure-element">
                                            <label id="date-departure-label">Datum odlaska:
                                            </label>
                                            <input id="date-departure" name="date-departure" maxlength='10'
                                                placeholder="dd.mm.yyyy" class="form-control">
                                            <script>
                                                $('#date-departure').datepicker({
                                                    format: 'dd.mm.yyyy',
                                                    uiLibrary: 'bootstrap4'
                                                });
                                            </script>
                                        </div>
                                        <div>
                                            <div class="date-arrival-element">
                                                <label id="date-arrival-label">Datum povratka: </label>
                                                <input id="date-arrival" name="date-arrival" maxlength='10'
                                                    placeholder="dd.mm.yyyy" class="form-control">
                                                <script>
                                                    $('#date-arrival').datepicker({
                                                        format: 'dd.mm.yyyy',
                                                        uiLibrary: 'bootstrap4'
                                                    });
                                                </script>
                                            </div>
                                        </div>
                                        <div>
                                            <label>Zaposleni: </label>
                                            <select id="select_employees_rp" name="select_employees_rp"
                                                class="form-control">
                                                <% if (emp.length> 0) { %>
                                                    <option default value="0"></option>
                                                    <% for (let employees of emp) { %>
                                                        <option value="<%= employees.id %>">
                                                            <%= employees.name %>
                                                        </option>
                                                        <% } %>
                                                            <% } else { %>
                                                                <option value="0"></option>
                                                                <% } %>
                                            </select>
                                        </div>
                                        <label>Vozilo: </label>
                                        <select id="select_vehicle_rp" name="select_vehicle_rp" class="form-control">
                                            <% if (veh.length> 0) { %>
                                                <option default value="0"></option>
                                                <% for (let vehicle of veh) { %>
                                                    <option value="<%= vehicle.id %>">
                                                        <%= vehicle.car +" "+vehicle.registration %>
                                                </option>
                                                <% } %>
                                                    <% } else { %>
                                                        <option value=" 0">
                                                    </option>
                                                    <% } %>
                                        </select>
                                        </br>
                                        </br>
                                        <div>
                                            <label>Izvještaj:</label>

                                        </div>
                                        <div>
                                            <textarea class="form-control" row="5"></textarea>
                                        </div>
                                        <br>
                                        <div>
                                            <button type="submit" onclick="" class="btn btn-success"><i
                                                    class="fas fa-save"></i>&nbsp;Sačuvaj</button>
                                        </div>

                                    </div>
                                </div>
                                </br>

                                </br>
                                </br>

                                </br>
                                </br>
                            </div>
                    </div>
                    <%- include('includes/footer.ejs') %>
    </body>

    </html>